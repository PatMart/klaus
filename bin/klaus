#!/usr/bin/env python

from sys import argv, exit
from klaus import make_app

from werkzeug.serving import run_simple

if __name__ == '__main__':

    if len(argv) < 1:
        print "%s REPO 1 [REPO 2, REPO 3]"
        exit(2)

    app = make_app(argv[1:])
    run_simple('127.0.0.1', 5000, app, use_reloader=True)
